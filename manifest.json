{
  "manifest_version": 3,
  "name": "Tablet Browse",
  "version": "1.3.0",
  "description": "A browser extension optimized for tablets, providing video playback optimization, touch protection, rendering optimization, and comprehensive tablet browsing enhancements.",
  
  "permissions": [
    "tabs",
    "storage"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "content/utils/chrome-helpers.js",
        "content/utils/environment.js",
        "content/utils/constants.js",
        "content/utils/helpers.js",
        "content/features/swipe-disabler.js",
        "content/features/video-optimizer.js",
        "content/features/render-optimizer.js",
        "content/main.js"
      ],
      "css": [
        "content/styles/main.css"
      ],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "TabletBrowse Pro",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "content/styles/*.css",
        "content/assets/*.png",
        "content/assets/*.svg"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ],

  "homepage_url": "https://github.com/Vist233/tablet-browse",
  "author": "Vist233"
}
